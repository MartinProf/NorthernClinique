<Window x:Class="NorthernClinique.RecherchePatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorthernClinique"
        mc:Ignorable="d"
        Title="RecherchePatient" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DatePicker HorizontalAlignment="Left" Margin="430,70,0,0" VerticalAlignment="Top"/>
        <Label Content="Date Naissance" HorizontalAlignment="Left" Margin="438,44,0,0" VerticalAlignment="Top" Width="107"/>
        <TextBox x:Name="txtAdresse" HorizontalAlignment="Left" Margin="77,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtCodePostal" HorizontalAlignment="Left" Margin="525,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtProvince" HorizontalAlignment="Left" Margin="370,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtVille" HorizontalAlignment="Left" Margin="228,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Adresse" HorizontalAlignment="Left" Margin="79,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Code Postal" HorizontalAlignment="Left" Margin="525,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Province" HorizontalAlignment="Left" Margin="370,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Ville" HorizontalAlignment="Left" Margin="228,126,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTelephone" HorizontalAlignment="Left" Margin="77,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Telephone" HorizontalAlignment="Left" Margin="79,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.42,-0.17"/>
        <Button Content="Valider Admission" HorizontalAlignment="Left" Margin="627,376,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.178,0.517" Width="116" Height="32"/>
        <Label Content="Cie. assurance" HorizontalAlignment="Left" Margin="222,191,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbChirurgie" Content="Chirurgie" HorizontalAlignment="Left" Margin="332,294,0,0" VerticalAlignment="Top"/>
        <Label Content="Medecin" HorizontalAlignment="Left" Margin="400,191,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboAssurance" HorizontalAlignment="Left" Margin="222,215,0,0" VerticalAlignment="Top" Width="120" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" DisplayMemberPath="nom_compagnie"/>
        <ComboBox x:Name="cboMedecin" HorizontalAlignment="Left" Margin="378,215,0,0" VerticalAlignment="Top" Width="120"/>
        <GroupBox Header="GroupBox" Margin="79,271,521,42">
            <Grid>
                <CheckBox Content="Location televiseur" HorizontalAlignment="Left" Margin="36,22,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="Location telephone" HorizontalAlignment="Left" Margin="36,61,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <ComboBox x:Name="cboTypeChambre" HorizontalAlignment="Left" Margin="542,213,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.082,0.174"/>
        <Label Content="Type de chambre" HorizontalAlignment="Left" Margin="542,191,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboTypeLit" HorizontalAlignment="Left" Margin="441,291,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Type de lit" HorizontalAlignment="Left" Margin="442,265,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboPatient" HorizontalAlignment="Left" Margin="77,66,0,0" VerticalAlignment="Top" Width="120" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" DisplayMemberPath="Patient"/>
        <Label Content="Patient" HorizontalAlignment="Left" Margin="79,40,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
